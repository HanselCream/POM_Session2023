<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="OpenCart Regression Suite" verbose= "4"
       thread-count="3" parallel="tests">

    <test name= "Login Page Test">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name= "com.qa.opencart.tests.LoginPageTest"/>
        </classes>
    </test> <!-- Test -->

    <test name="Account Page Test">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name= "com.qa.opencart.tests.AccountPageTest"/>
        </classes>
    </test> <!-- Test -->

    <test name="Search Test">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="com.qa.opencart.tests.SearchTest"/>
        </classes>
    </test> <!-- Test -->

    <test name="Product Info Test">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name= "com.qa.opencart.tests.ProductInformationPageTest"/>
        </classes>
    </test> <!-- Test -->

    <test name="Register Page Test">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name= "com.qa.opencart.tests.RegisterPageTest"/>
        </classes>
    </test> <!-- Test -->

    <test name="Search Data Test">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name= "com.qa.opencart.tests.SearchDataTest"/>
        </classes>
    </test> <!-- Test -->


</suite> <!-- Suite -->